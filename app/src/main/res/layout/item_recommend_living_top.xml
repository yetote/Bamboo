<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/recommend_living_top_blur"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/test_horizontal" />

    <TextView
        android:id="@+id/recommend_living_top_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/recommend_living_live_tag"
        android:drawableStart="@mipmap/windy"
        android:padding="5dp"
        android:text="wertghujkl"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:elevation="1dp" />

    <TextView
        android:id="@+id/recommend_living_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/recommend_living_livw_user"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="asdfgh"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/recommend_living_top_contentCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/recommend_living_top_blur"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/recommend_living_top_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/recommend_living_top_contentCardView"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/recommend_living_livw_user"
        android:elevation="5dp">

        <TextView
            android:id="@+id/recommend_living_top_liver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/recommend_living_top_spectatorNum"
            android:paddingStart="5dp"
            android:text="@string/missOld"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/recommend_living_top_spectatorNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@mipmap/spectator"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:text="@string/testDiscuss"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>