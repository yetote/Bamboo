<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/recommend_living_live_cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/recommend_living_live_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recommend_living_live_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/recommend_living_live_tag"
        android:drawableStart="@mipmap/windy"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:elevation="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/recommend_living_live_cardView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/recommend_living_live_tag"
        android:background="@drawable/recommend_living_livw_user"
        android:elevation="2dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/recommend_living_live_liver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recommend_living_live_spectatorNum"
            android:layout_alignBottom="@id/recommend_living_live_spectatorNum"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/recommend_living_live_spectatorNum"
            android:ellipsize="end"
            android:gravity="start|center"
            android:maxLines="1"
            android:textColor="@color/white"
            tools:text="asd" />

        <TextView
            android:id="@+id/recommend_living_live_spectatorNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableStart="@mipmap/spectator"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:textColor="@color/white"
            tools:text="4893" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend_living_live_cardView"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:id="@+id/recommend_living_live_title"
        android:gravity="start|center"
        android:maxLines="1"
        android:text="2eewffdgh"
        android:layout_marginBottom="5dp"
        android:textSize="16sp" />
</RelativeLayout>