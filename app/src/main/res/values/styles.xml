<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="android:colorControlNormal">@color/firebrick</item>
        <item name="colorControlActivated">@color/goldenrod</item>
        <item name="colorControlHighlight">@color/palegreen</item>
        <item name="colorPrimaryDark">@color/cadetblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GradientTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--<item name="colorPrimary">@color/cadetblue</item>-->
        <!--<item name="android:wsta">@drawable/toolbar_gradient_background</item>-->
    </style>


    <style name="MyTextInputLayoutCountStyle" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextInputLayoutCountOverFlowStyle" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="MyTextInputLayoutErrorStyle" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyToolbarStyle">
        <item name="android:background">@drawable/toolbar_gradient_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/waiting</item>
    </style>


    <style name="popwin_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit_animation</item>
    </style>

    <declare-styleable name="NineImageView">
        <attr name="list_size" format="integer" />
    </declare-styleable>
    <declare-styleable name="RecodeButton">
        <attr name="radius" format="integer" />
    </declare-styleable>
</resources>
